<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp750_30"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playOrPauseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/video_player_btn_pause" />

    <TextView
        android:id="@+id/startTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp750_20"
        android:layout_marginRight="@dimen/dp750_20"
        android:text="0.0s"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp750_24" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="100"
        android:maxHeight="3.0dip"
        android:minHeight="3.0dip"
        android:progressDrawable="@drawable/video_player_seekbar_progress"
        android:thumb="@mipmap/video_player_seek_thumb" />

    <TextView
        android:id="@+id/totalDurationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp750_20"
        android:layout_marginRight="@dimen/dp750_20"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp750_24" />

</LinearLayout>